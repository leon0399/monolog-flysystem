{
  "name": "leon0399/monolog-flysystem",
  "description": "Writes your Monolog records into Flysystem files.",
  "license": "MIT",
  "type": "library",
  "keywords": [
    "log",
    "logging",
    "monolog",
    "monolog-handler",
    "monolog-library",
    "flysystem",
    "cloud logging"
  ],
  "authors": [
    {
      "name": "Leonid Meleshin",
      "email": "leon.03.99@gmail.com"
    }
  ],
  "homepage": "http://github.com/leon0399/monolog-flysytem",
  "require": {
    "php": ">=7.3",
    "league/flysystem": "^1.0",
    "monolog/monolog": "^2.4"
  },
  "require-dev": {
    "phpunit/phpunit": "^9"
  },
  "autoload": {
    "psr-4": {
      "Leon0399\\MonologFlysystem\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Leon0399\\MonologFlysystem\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit --colors=always",
    "test:ci": "composer test -- --verbose --coverage-text --coverage-clover=coverage.xml"
  }
}
