  "keywords": [
    "log",
    "logging",
    "monolog",
    "monolog-handler",
    "monolog-library",
    "flysystem",
    "cloud logging"
  ],
  "homepage": "http://github.com/leon0399/monolog-flysytem",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Leonid Meleshin",
      "email": "leon.03.99@gmail.com"
    }
  ],
  "require": {
    "php": "^7.1",
    "monolog/monolog": "^1.23",
    "league/flysystem": "^1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^7 || ^8"
  },
  "autoload": {
    "psr-4": {
      "Leon0399\\MonologFlysystem\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Leon0399\\MonologFlysystem\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit"
  }
}
